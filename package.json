{
  "name": "@aeldar/rounded-percentage",
  "version": "0.1.2",
  "license": "MIT",
  "description": "Calculates rounded percentage using the Largest Remainder Method to keep the sum of the rounded percentages equal to 100",
  "keywords": [
    "rounded",
    "percentage",
    "percent",
    "Largest Remainder Method",
    "utility"
  ],
  "author": "aeldar <eldar.aliyev8@gmail.com>",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "module": "dist/rounded-percentage.esm.js",
  "size-limit": [
    {
      "path": "dist/rounded-percentage.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/rounded-percentage.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.0.1",
    "husky": "^8.0.1",
    "size-limit": "^8.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^3.9.10"
  }
}
